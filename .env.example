# Database
DATABASE_URL="postgresql://user:password@localhost:5432/neobank"

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe
# IMPORTANT: Use test mode (sk_test_...) for development
# Stripe Identity will use test mode verification (no real documents needed)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Plaid
# IMPORTANT: Keep PLAID_ENV=sandbox for development/testing
# Environments: sandbox | development | production
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Sentry
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Transfer Limits
# Per-transaction limit in USD (default: $10,000)
MAX_TRANSFER_AMOUNT=10000
# Daily transfer limit in USD (default: $25,000)
DAILY_TRANSFER_LIMIT=25000
# Threshold for pending review in USD (transfers above this require review)
PENDING_REVIEW_THRESHOLD=5000
